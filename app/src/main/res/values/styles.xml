<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Horizontal tayoqcha-->
    <style name="Horizontal_line">
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/black</item>
    </style>
    <!--Vertical ustun-->
    <style name="Vertical_line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">5dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <!--Button components-->
    <style name="Button_com">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:text"></item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--style for set color characters-->
    <style name="Colors_Comp">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--  hisob uchun  -->
    <style name="Scoreboard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!--  chiziqcha  -->
    <style name="Liner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <!--  gamers name  -->
    <style name="Player_nameee">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/megrim</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>